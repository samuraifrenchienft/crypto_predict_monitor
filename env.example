# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Discord Configuration
# Main arbitrage alerts webhook
CPM_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Health/system status alerts webhook (separate from main alerts)
DISCORD_HEALTH_WEBHOOK_URL=https://discord.com/api/webhooks/HEALTH_WEBHOOK_ID/HEALTH_WEBHOOK_TOKEN

# Discord bot token for direct messages (optional)
DISCORD_BOT_TOKEN=YOUR_DISCORD_BOT_TOKEN

# Database Configuration
# PostgreSQL database URL for dashboard
DATABASE_URL=postgresql://username:password@localhost:5432/cpm_arbitrage

# Flask/Dashboard Configuration
# Secret key for Flask sessions (generate with: python -c "import secrets; print(secrets.token_hex(32))")
FLASK_SECRET_KEY=your_flask_secret_key_here

# Optional: External Services
# API keys for external services (if needed)
# POLYGON_API_KEY=your_polygon_api_key
# COINGECKO_API_KEY=your_coingecko_api_key

# Optional: Development Settings
# Set to True for development mode
DEBUG_MODE=false

# Optional: Monitoring
# External monitoring service webhook
# MONITORING_WEBHOOK_URL=https://your-monitoring-service.com/webhook

# Optional: Cache Configuration
# Redis URL for caching (if using Redis)
# REDIS_URL=redis://localhost:6379/0

# Optional: Email Notifications (if enabled)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
