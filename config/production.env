# Production Environment Configuration
# Copy this to .env.production and update with your values

# Core Configuration
CPM_MODE=monitor
CPM_UPSTREAM=polymarket
CPM_BASE_URL=https://api.your-domain.com
PORT=8000
ENVIRONMENT=production

# Database Configuration
POSTGRES_DB=crypto_monitor_prod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=super_secure_production_password
DATABASE_URL=postgresql://postgres:super_secure_production_password@postgres:5432/crypto_monitor_prod

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Webhook Configuration
CPM_WEBHOOK_URL=https://discord.com/api/webhooks/production/your-webhook-id
DISCORD_HEALTH_WEBHOOK_URL=https://discord.com/api/webhooks/health/your-health-webhook-id

# Security Configuration
SECRET_KEY=super_secure_production_secret_key_change_immediately
JWT_SECRET_KEY=super_secure_production_jwt_secret_key_change_immediately

# AWS Configuration (for P&L cards)
AWS_S3_BUCKET=production-crypto-monitor-assets
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Rate Limiting
API_RATE_LIMIT=1000
REDIS_URL=redis://redis:6379/0

# Logging
LOG_LEVEL=WARNING
LOG_FORMAT=json

# Frontend Configuration
FRONTEND_URL=https://your-domain.com
REACT_APP_API_URL=https://api.your-domain.com
REACT_APP_WS_URL=wss://api.your-domain.com

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Settings
DEBUG=false
TESTING=false
RUN_MIGRATIONS=true

# Performance
WORKERS=8
MAX_CONNECTIONS=500
TIMEOUT_SECONDS=60

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
