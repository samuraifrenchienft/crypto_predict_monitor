# Staging Environment Configuration
# Copy this to .env.staging and update with your values

# Core Configuration
CPM_MODE=monitor
CPM_UPSTREAM=dev
CPM_BASE_URL=http://localhost:8000
PORT=8000
ENVIRONMENT=staging

# Database Configuration
POSTGRES_DB=crypto_monitor_staging
POSTGRES_USER=postgres
POSTGRES_PASSWORD=staging_password_123
DATABASE_URL=postgresql://postgres:staging_password_123@localhost:5432/crypto_monitor_staging

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Webhook Configuration
CPM_WEBHOOK_URL=https://discord.com/api/webhooks/staging/your-webhook-id
DISCORD_HEALTH_WEBHOOK_URL=https://discord.com/api/webhooks/health/your-health-webhook-id

# Security Configuration
SECRET_KEY=staging_secret_key_change_in_production_12345
JWT_SECRET_KEY=staging_jwt_secret_key_change_in_production_67890

# AWS Configuration (for P&L cards)
AWS_S3_BUCKET=staging-crypto-monitor-assets
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Rate Limiting
API_RATE_LIMIT=100
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Settings
DEBUG=false
TESTING=false
RUN_MIGRATIONS=true

# Performance
WORKERS=4
MAX_CONNECTIONS=100
TIMEOUT_SECONDS=30
