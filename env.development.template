"""
Development Environment Template
Copy to .env.development for local development
"""

# Development Environment
ENVIRONMENT=development
SECRET_KEY=dev-secret-key-change-in-production
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database (Supabase - use your dev project)
SUPABASE_URL=https://your-dev-project.supabase.co
SUPABASE_ANON_KEY=your-dev-anon-key
SUPABASE_SERVICE_KEY=your-dev-service-key

# Discord (use test webhook)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/test-webhook-id/test-token
DISCORD_HEALTH_WEBHOOK_URL=https://discord.com/api/webhooks/health-test/health-token

# AWS S3 (optional for dev)
AWS_S3_BUCKET=dev-pnl-cards
AWS_ACCESS_KEY_ID=your-dev-aws-key
AWS_SECRET_ACCESS_KEY=your-dev-aws-secret
AWS_REGION=us-east-1

# Redis (local)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/dev.log

# Feature Flags
ENABLE_PNL_CARDS=true
ENABLE_LEADERBOARD=true
ENABLE_SOCIAL_SHARING=true
RUN_MIGRATIONS=true

# Rate Limiting (relaxed for dev)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
JWT_SECRET=dev-jwt-secret
