"""
Environment Configuration Templates
Setup templates for different environments
"""

# Production Environment Template
# Copy to .env and fill in your values

# Application Settings
ENVIRONMENT=production
SECRET_KEY=your-super-secret-key-here
PORT=5000
FRONTEND_URL=https://yourdomain.com

# Database Settings (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Discord Integration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-id/your-token
DISCORD_HEALTH_WEBHOOK_URL=https://discord.com/api/webhooks/health-webhook-id/health-token

# AWS S3 (Optional - for card storage)
AWS_S3_BUCKET=your-pnl-cards-bucket
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Redis (for rate limiting)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_PNL_CARDS=true
ENABLE_LEADERBOARD=true
ENABLE_SOCIAL_SHARING=true
RUN_MIGRATIONS=false

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Security
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
JWT_SECRET=your-jwt-secret-key
